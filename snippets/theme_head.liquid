{% assign title = "Index • Online Learning Platform" %}
{% assign description = "This is the online learning platform for Index, a center for peer-led programming and the generous exchange of knowledge and ideas." %}

<head>
  {% csrf_meta_tags %}

  <title>Index • Online Learning Platform</title>
  <meta charset="utf-8"/>
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <link href="{{ 'shortcut.png' | asset_url }}?v=2" rel="shortcut icon"/>
  <link rel="canonical" href="{{ canonical_url }}"/>

  <meta name="description" content="{{ description }}">
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="{{ 'sharecard.png' | asset_url }}">
  <meta property="og:locale" content="en_US">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="{{ 'sharecard.png' | asset_url }}">
  <meta name="twitter:card" content="summary_large_image">

  {{ 'reset.css' | asset_url | stylesheet_tag }}
  <link rel='stylesheet' type='text/css' href='https://fonts.sanctuary.computer/ITCGaramond/styles.css'>
  <link rel='stylesheet' type='text/css' href='https://fonts.sanctuary.computer/ABCDiatype/styles.css'>
  <link rel='stylesheet' type='text/css' href='https://fonts.sanctuary.computer/Input/styles.css'>
  <link rel='stylesheet' type='text/css' href='https://fonts.sanctuary.computer/IndexLogotype/styles.css'>
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .logo {
      font-family: 'Index Logotype', serif;
    }
    .bg-neongreen {
      background-color: #dbff00;
    }
    .serif {
      font-family: 'ITC Garamond Std Lt Cond', serif;
    }
    .sans-serif {
      font-family: 'ABC Diatype Light', sans-serif;
    }
    .post-body p {
      font-family: 'ABC Diatype Light', sans-serif;
    }
    .post-body p a {
      display: inline-block;
      padding-top: 0.25rem;
      border-bottom: 1px dashed black;
    }
    h1.cta-text {
      font-size: 40px;
      line-height: 40px;
    }
    h1.cta-text a {
      font-size: 30.4px;
      line-height: 36px;
      padding-left: 4px;
      padding-right: 4px;
      border-radius: 6px;
    }
    @media screen and (min-width: 600px) {
      h1.cta-text {
        font-size: 75px;
        line-height: 75px;
      }
      h1.cta-text a {
        font-size: 50px;
        line-height: 55px;
      }
    }
  </style>

  {% content_for_header %}
</head>
