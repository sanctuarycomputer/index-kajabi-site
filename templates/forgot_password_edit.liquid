{% layout "minimal" %}

<div class="p-4 md:p-8">
  <div class="max-w-2xl mx-auto border border-black border-solid p-8 rounded-xl">
    <h1 class="serif text-5xl mb-2">
      Create new password
    </h1>

    {% form 'forgot_password_edit' %}
      {% if form.errors.messages['reset_password_token'] %}
        <div class="bg-neongreen p-2 mb-4">
          {{ form.errors.messages['reset_password_token'] }}
        </div>
      {% elsif form.errors.messages['form'] %}
        <div class="bg-neongreen p-2 mb-4">
          {{ form.errors.messages['form'] }}
        </div>
      {% endif %}

      <div class="mb-4">
        <label for="member_password" class="block sans-serif text-sm text-black">Password</label>
        <input autofocus="autofocus" type="password" name="member[password]" id="member_password" class="w-full inline-block bg-white text-black border border-black border-solid sans-serif text-2xl uppercase rounded px-2 py-1"/>
      </div>

      {% if form.errors.messages['password'] %}
        <div class="bg-neongreen p-2 mb-4">
          {{ form.errors.messages['password'] }}
        </div>
      {% endif %}

      <div class="mb-4">
        <label for="member_password_confirmation" class="block sans-serif text-sm text-black">Password Confirmation</label>
        <input autofocus="autofocus" type="password" name="member[password_confirmation]" id="member_password_confirmation" class="w-full inline-block bg-white text-black border border-black border-solid sans-serif text-2xl uppercase rounded px-2 py-1"/>
      </div>

      {% if form.errors.messages['password_confirmation'] %}
        <div class="bg-neongreen p-2 mb-4">
          {{ form.errors.messages['password_confirmation'] }}
        </div>
      {% endif %}

      <input class="w-full text-center inline-block bg-black text-white border border-black border-solid sans-serif text-2xl uppercase rounded mt-4 px-2 py-1" type="submit" name="commit" value="Save new password">
    {% endform %}
    <a class="w-full text-center inline-block bg-white text-black border border-black border-solid sans-serif text-2xl uppercase rounded mt-4 px-2 py-1" href="/login">
      Nevermind... I Remember
    </a>
  </div>
</div>
